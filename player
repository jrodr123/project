public class Player {

    if (checkBlackJack() = false){
        //show players's cards and let player decide to Hit or Stand.
        System.out.println("Your cards are: ");
        for (int i = 0; i < playerHand.size(); i++) {
              //this is assuming we have a showCard and getCard class somewhere
            System.out.println("    " + showCard(getCard(playerHand, i)));
        }
        System.out.println("\nYour total is " + value(playerHand) + "\n");

        //implement hit and stand button
        System.out.print("Hit or Stand? ");

        // If the user Hits, the user gets a card.
        // If the user Stands, the program continues to the dealer.
        if (playerAction.stand()) {
            continue;
        }
        if (playerAction.hit()) {
            // Give the user a card.  If the user goes over 21, the user loses.
            if (value(playerHand) > 21) {
                System.out.println();
                System.out.println("You busted by going over 21.  You lose.");
                System.out.println("Dealer's other card was the " + showCard(getCard(playerHand, 1)));
                return false;
            }
        }
    }
}

public void hit() {
        //gives player another card. checks for blackjack and bust
        int newCard = dealCard();
        playerHand.addCard;
        System.out.println("Player hits.\n");
        System.out.println("Your card is the " + showCard(newCard));
        System.out.println("Your total is now " + value(playerHand));
    }

    public void stand() {
        continue;
    }
}
