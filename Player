public class Dealer extends Player {

	
	public Dealer() {
		wallet = 0;
	}
	public void hit(){
		 Card newcard = deck.getNextCard();	        
	        myhand.addCard(newcard);
	        System.out.println("Dealer hits.\n");
	        System.out.println("Dealer card is the: " + newcard.toString());
	        System.out.println("Dealer total is: " + myhand.getValue());
	}
	public void getHand(){
		Hand hand = new Hand();
		this.myhand = hand;
		this.handvalue = hand.getValue();
		System.out.println("Dealer's Second Card: ");
		this.showSecond();
	}
	public Card showSecond(){
		return myhand.showSecond();
	}
	public void payout(int bet){
		wallet -= bet;
	}
	public void collectBet(int bet){
		wallet += bet;
	}
}
